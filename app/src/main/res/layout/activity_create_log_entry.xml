<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createLogEntry">

    <LinearLayout
        android:id="@+id/editTextLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179"
        android:visibility="visible">

        <EditText
            android:id="@+id/workoutNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="PULL DAY"
            android:textSize="10dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="10dp"
            android:inputType="textPersonName"
            android:text="03/22/2020" />

        <EditText
            android:id="@+id/startTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="3:25"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/durationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="60 mins"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/bodyWeightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="200lbs"
            android:textSize="10dp"
            android:inputType="textPersonName"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/leftLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leftWorkoutNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WORKOUT NAME"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/leftDateTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/leftStartTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START TIME"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/leftDurationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DURATION"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/leftBodyWeightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BODY WEIGHT"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/rightLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/rightWorkoutNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CLICK"
                android:textColor="#000000"
                android:textSize="20dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/rightDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CLICK"
                android:textColor="#000000"
                android:textSize="20dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/rightStartTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CLICK"
                android:visibility="visible"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rightDurationTextView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CLICK"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rightBodyWeightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CLICK"
                android:visibility="visible"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="103dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="DONE"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dateTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>